    </div>
    <br />

    <div class="table-responsive align-middle border pb-3 border-dark  border-bottom-3 border-top-0 border-end-0 border-start-0">
        <table id="kt_datatable_dom_positioning" class="table table-striped table-row-bordered gy-1 gs-7 border rounded">
            <thead>
                <tr class="fw-bold fs-6 text-gray-900 border border-gray-300 border-dashed text-uppercase">
                    <th scope="col" class="text-start ps-9">Country Name</th>
                    <th scope="col" class="text-start ps-9">State Name</th>
                    <th scope="col" class="text-start ps-9">City Name</th>
                    <th scope="col" class="text-center">Creation Date</th>
                    <th scope="col" class="text-center">Modification Date</th>
                    <th scope="col" class="text-center">Edit</th>
                    <th scope="col" class="text-center">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (DataRow dr in Model.Rows)
                {
                    <tr class="border text-center fs-4 border-gray-300 border-dashed align-middle">
                        <td class="text-start ps-9">@dr["CountryName"]</td>
                        <td class="text-start ps-9">@dr["StateName"]</td>
                        <td class="text-start ps-9">@dr["CityName"]</td>
                        <td class="text-center">@Convert.ToDateTime(dr["CreationDate"]).ToString("dd-MM-yyyy")</td>
                        <td class="text-center">@Convert.ToDateTime(dr["ModificationDate"]).ToString("dd-MM-yyyy")</td>
                        <td>
                            <form asp-area="LOC_City" asp-controller="LOC_City">
