@{
    ViewData["Title"] = "City";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data;
@model DataTable;

<div class="">
    <div class="">
        <div>
            <h2>@TempData["LOC_City_Delete_Msg"]</h2>
            <h2>@TempData["LOC_City_Update_Msg"]</h2>
        </div>

        <div class="row align-items-center m-1 p-3 border-start border-primary border-4 bg-light-primary">
            <div class="col-md-2">
                <h2 class="text-primary fs-1 text-uppercase">City List</h2>
            </div>
            <div class="col-md-9">
                <form method="post" asp-area="LOC_City" asp-controller="LOC_City">
                    <div class="row justify-content-end">

                        <div class="form-floating col-3">
                            <input type="text" class="form-control " id="floatingInput" name="CountryName" placeholder="India" value="@ViewBag.CountryName" />
                            <label for="floatingInput">&nbsp;&nbsp; Country Name</label>
                        </div>
                        
                        <div class="form-floating col-3">
                            <input type="text" class="form-control" id="floatingInput" name="StateName" placeholder="Gujarat" value="@ViewBag.StateName" />
                            <label for="floatingInput">&nbsp;&nbsp; State Name</label>
                        </div>

                        <div class="form-floating col-3">
                            <input type="text" class="form-control" id="floatingInput" name="CityName" placeholder="Gujarat" value="@ViewBag.CityName" />
                        <label for="floatingInput">&nbsp;&nbsp; City Name</label>
                        </div>

                        <div class="col-3 text-center align-self-center">
                            <button type="submit" class="btn btn-light-primary border border-primary btn-sm" asp-action="Search">Search <i class="ps-2 bi bi-search fs-4"></i></button>
                            &nbsp;
                            <a class="btn  btn-light-danger border border-danger btn-sm" asp-action="Index"><i class="bi bi-x-lg fs-4"></i></a>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-1">
                <a asp-area="LOC_City" asp-action="Add" asp-controller="LOC_City"><i class="text-success bi bi-plus-square fs-2hx"></i></a>
            </div>
        </div>

